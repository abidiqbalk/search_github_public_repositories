<div class="container mt-2">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">Search Github Repositories</div>
        <div class="card-body">
            <div class="form-section">
              <%= form_for :search, method: :get do |f| %>
                <div class="form-group">
                  <%=f.text_field :repo_name, class:"form-control" ,placeholder:"Enter Github Repo Name", required:true%>
                </div>
                <div class="form-group">
                  <%=f.submit "Search" ,class:"btn btn-primary"%>
                  <%=link_to "Clear Search Results","/",class:"btn btn-warning" if  params[:search] && params[:search][:repo_name].present?%>
                </div>
              <%end%>
            </div>
          <div class="search-results">
            <%= render(partial: 'list',locals:{urls: @urls}) if @urls.present? %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>